<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_Blue"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/signup_Logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ifit" />

    <TextView
        android:id="@+id/signup_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="48dp"
        android:fontFamily="casual"
        android:layout_marginTop="175dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/signup_BOX_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        app:layout_constraintTop_toBottomOf="@id/signup_LBL_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="casual"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/signup_BOX_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@id/signup_BOX_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textEmailAddress"
        android:fontFamily="casual"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/signup_BOX_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@id/signup_BOX_email"
        app:layout_constraintStart_toStartOf= "parent"
        app:layout_constraintEnd_toEndOf= "parent"
        android:inputType= "textPassword"
        android:fontFamily="casual"
        android:padding= "8dp"/>

    <EditText
        android:id= "@+id/signup_BOX_age"
        android:layout_width= "0dp"
        android:layout_height= "wrap_content"
        android:hint= "Age"
        app:layout_constraintTop_toBottomOf= "@id/signup_BOX_password"
        app:layout_constraintStart_toStartOf= "parent"
        app:layout_constraintEnd_toEndOf= "parent"
        android:inputType= "number"
        android:fontFamily="casual"
        android:padding= "8dp"/>

    <EditText
        android:id= "@+id/signup_BOX_weight"
        android:layout_width= "0dp"
        android:layout_height= "wrap_content"
        android:hint="Weight"
        app:layout_constraintTop_toBottomOf= "@id/signup_BOX_age"
        app:layout_constraintStart_toStartOf= "parent"
        app:layout_constraintEnd_toEndOf= "parent"
        android:inputType= "numberDecimal"
        android:fontFamily="casual"
        android:padding= "8dp"/>

    <EditText
        android:id= "@+id/signup_BOX_phoneNumber"
        android:layout_width= "0dp"
        android:layout_height= "wrap_content"
        android:hint="Phone Number"
        app:layout_constraintTop_toBottomOf= "@id/signup_BOX_weight"
        app:layout_constraintStart_toStartOf= "parent"
        app:layout_constraintEnd_toEndOf= "parent"
        android:inputType= "phone"
        android:fontFamily="casual"
        android:padding= "8dp"/>

    <Button
        android:id="@+id/signupbuttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/signup_BOX_phoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="casual"
        android:backgroundTint="@color/light_Blue2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/> <!-- Adjust the margin value as needed -->
</androidx.constraintlayout.widget.ConstraintLayout>